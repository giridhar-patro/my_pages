        $host = "localhost";
        $username = "root";
        $password = "";
        $database = "dance_class";

        // Create a database connection
        $conn = mysqli_connect($host, $username, $password, $database);

        // Check if the connection is successful
        if (!$conn) {
          die("Connection failed: " . mysqli_connect_error());
        }

        // Insert data into the database
        if (isset($_POST['submit'])) {
          $instructor = $_POST['instructor'];
          $danceStyle = $_POST['danceStyle'];
          $description = $_POST['description'];

          $sql = "INSERT INTO classes (instructor, dance_style, description) VALUES ('$instructor', '$danceStyle', '$description')";

          if (mysqli_query($conn, $sql)) {
            echo "New record created successfully.";
          } else {
            echo "Error: " . $sql . "<br>" . mysqli_error($conn);
          }
        }

        // Update data in the database
        if (isset($_POST['update'])) {
          $classId = $_POST['classId'];
          $instructor = $_POST['instructor'];
          $danceStyle = $_POST['danceStyle'];
          $description = $_POST['description'];

          $sql = "UPDATE classes SET instructor='$instructor', dance_style='$danceStyle', description='$description' WHERE id=$classId";

          if (mysqli_query($conn, $sql)) {
            echo "Record updated successfully.";
          } else {
            echo "Error: " . $sql . "<br>" . mysqli_error($conn);
          }
        }

        // Delete data from the database
        if (isset($_GET['delete'])) {
          $classId = $_GET['delete'];

          $sql = "DELETE FROM classes WHERE id=$classId";

          if (mysqli_query($conn, $sql)) {
            echo "Record deleted successfully.";
          } else {
            echo "Error: " . $sql . "<br>" . mysqli_error($conn);
          }
        }

        // Retrieve and display data from the database
        $sql = "SELECT * FROM classes";
        $result = mysqli_query($conn, $sql);

        if (mysqli_num_rows($result) > 0) {
          echo "<table>";
          echo "<tr><th>Class ID</th><th>Instructor</th><th>Dance Style</th><th>Description</th><th>Actions</th></tr>";

          while ($row = mysqli_fetch_assoc($result)) {
            echo "<tr>";
            echo "<td>".$row['id']."</td>";
            echo "<td>".$row['instructor']."</td>";
            echo "<td>".$row['dance_style']."</td>";
            echo "<td>".$row['description']."</td>";
            echo "<td><a href='dance_class.php?delete=".$row['id']."'>Delete</a></td>";
            echo "</tr>";
          }

          echo "</table>";
        } else {
          echo "No records found.";
        }

        // Close the database connection
        mysqli_close($conn);
      ?>
